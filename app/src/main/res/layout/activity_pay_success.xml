<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/ib_good_info_back"
            android:layout_width="wrap_content"
            android:scaleType="centerInside"
            android:layout_height="wrap_content"
            android:background="@drawable/top_bar_left_back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="支付完成"
            android:textColor="#000000"
            android:textSize="17sp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:scaleType="centerInside"
            android:visibility="invisible"
            android:layout_height="wrap_content"
            android:background="@drawable/top_bar_left_back" />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:background="#FFF0F0F0"
        android:layout_height="1dp" />
    <ImageView
        android:layout_width="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:src="@mipmap/icon_pay_success"
        android:layout_height="100dp" />
    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:textSize="14sp"
        android:textColor="#000000"
        android:text="付款金额：¥"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content" />
    <com.allen.library.SuperButton
        android:id="@+id/btn_finish"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:textSize="15sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        app:sCornersRadius="20dp"
        android:text="返回"
        android:textColor="#ffffff"
        app:sGradientEndColor="@color/red_light"
        app:sGradientOrientation="RIGHT_LEFT"
        app:sGradientStartColor="@color/colorAccent" />
</LinearLayout>